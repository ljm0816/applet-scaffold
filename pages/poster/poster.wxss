/* pages/poster/poster.wxss */
.canvas-box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 80%;
  z-index: 210;
  background: #fff;
  margin: auto;
}
.canvas-content{
  overflow-y: scroll;
  margin: auto;
  text-align: center;
  height: 100%;
  -webkit-overflow-scrolling: touch;
  padding: 20rpx 40rpx 0 20rpx;
  position: relative;
}
.canvas-content .close{
  width: 100%;
  text-align: right;
}
.canvasimg-panel{
  width: 60%;
  box-shadow: 0 3px 17px #ebebeb;
  margin: auto;
  text-align: center;
  position: relativel
}
.canvas-content .canvasimg{
  /* box-shadow: 0 3px 17px #ebebeb; */
}
.canvas-content::-webkit-scrollbar {display: none;}
.canvas-box .save-btn{
  width: 60%;
  padding: 20rpx 0;
  background:rgba(0,120,216,1);
  box-shadow:0px 9rpx 20rpx 0px rgba(4,102,180,0.3);
  border-radius:40rpx;
  color: #fff;
  text-align: center;
  margin: auto;
  margin-top: 40rpx;
}
.canvas-box .btn-panel{
  padding-bottom: 40rpx;
}
.canvas-mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 200;
  background: rgba(0,0,0,0.5);
}