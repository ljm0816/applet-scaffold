.pupup-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2998;
  background: rgba(0, 0, 0, .2);
}
.popup{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2999;
  background: #fff;
  width: 100%;
  height: auto;
  /* padding-top: 280rpx; */
}
.area-panel {
  /*max-height: 100%;*/
}
.area-panel .level-panel {
  display: flex;
  max-height: 13rem;
  overflow: hidden;
}

.area-panel .level-panel .level1 {
  flex: 2;
  background: #f2f2f2;
  max-height: 50%;
  overflow: auto;
}
.area-panel .level-panel .level2 {
  flex: 3;
  overflow: auto;
}
.area-panel .level-li {
  text-align: center;
  line-height: 2.5rem;
  border-bottom: 1px solid #e5e5e5;
}
.area-panel .active {
  color: #ffffff;
  background: #ff6600;
}
.area-panel .bottom-panel {
  display: flex;
  padding: .5rem 0;
}
.area-panel .bottom-panel .price-panel {
  flex: 3;
}
.area-panel .more-panel {
  padding: .5rem 1rem;
  font-size: .7rem;
  border-bottom: 1px solid #e5e5e5;
}
.area-panel .more-panel .more-item {
  padding-top: .5rem;
}
